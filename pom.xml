<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>com.vitormp</groupId>
	<artifactId>maven-git</artifactId>
	<version>0.1.12</version>
	<packaging>war</packaging>

	<name>git-release-example Maven Webapp</name>

	<scm>
		<connection>scm:git:https://github.com/alangati/maven-git.git</connection>
		<developerConnection>scm:git:https://github.com/alangati/maven-git.git</developerConnection>
		<url>scm:git:https://github.com/alangati/maven-git.git</url>
	  <tag>maven-git-0.1.12</tag>
  </scm>

	<distributionManagement>
		<!-- Publish versioned releases here -->
		<repository>
			<id>nexusreleases</id>
			<name>arun-release</name>
			<url>http://localhost:8081/repository/arun-release/</url>
		</repository>

		<!-- Publish snapshots here -->
		<snapshotRepository>
			<id>nexussnapshots</id>
			<name>arun-snapshot</name>
			<url>http://localhost:8081/repository/arun-snapshot/</url>
		</snapshotRepository>
	</distributionManagement>


	<build>
		<finalName>git-release-example</finalName>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.5.3</version>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.10</version>
			<scope>test</scope>
		</dependency>
	</dependencies>


</project>

